{
    "presets": ["@babel/preset-env"],
    "env": {
        "commonjs": {
            "plugins": [
                ["@babel/plugin-proposal-class-properties", { "loose": true }],
                ["@babel/plugin-transform-modules-commonjs", { "loose": true }],
                ["@babel/plugin-transform-runtime", { "regenerator": true }]
            ]
        },
        "es": {
            "plugins": [
                ["@babel/plugin-proposal-class-properties", { "loose": true }],
            ]
        }
    }
}
