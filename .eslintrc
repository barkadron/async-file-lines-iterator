{
    "env": {
        "node": true,
        "mocha": true,
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "plugins": [
        "babel",
        "import",
        "prettier"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 9,
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": "off",

        "arrow-parens": "off",
        "object-curly-newline": "off",
        "no-mixed-operators": "off",
        "function-paren-newline": "off",
        "space-before-function-paren": 0,

        "no-plusplus": "off",
        "func-names": "off",
        "no-restricted-syntax": "off",
        "no-loop-func": "off",
        "no-await-in-loop": "off",

        "prettier/prettier": ["error"],
    }
}
